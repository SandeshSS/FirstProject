@model Tesco.OnlineRetail.Models.GiftProductCategory

@{
    ViewBag.Title = "Create";
}
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <br>
            <p class="lead">Welcome Admin</p>
            <br>
            <div class="list-group">

                <dl>
                    <dt>Manage Categories</dt>
                    <br>
                    <dd> <a href="~/Category/Index" class="list-group-item">View Categories</a></dd>
                    <dd> <a href="~/Category/Create" class="list-group-item">Add Categories</a></dd>

                </dl>
                <dl>
                    <br>
                    <dt>Manage Product</dt>
                    <br>
                    <dd><a href="~/Product/Index" class="list-group-item">View Products</a></dd>
                    <dd> <a href="~/Product/Create" class="list-group-item">Add Product</a></dd>
                </dl>

                <dl>
                    <br>
                    <dt>Manage Inventory</dt>

                    <dd><a href="~/Inventory/Index" class="list-group-item">View Inventory</a></dd>
                    <dd> <a href="~/Inventory/Create" class="list-group-item">Add product Quantity</a></dd>
                </dl>
                <dl>
                    <br>
                    <dt>Manage Gift Products</dt>

                    <dd><a href="~/GiftProduct/Index" class="list-group-item">View Products</a></dd>
                    <dd> <a href="~/GiftProduct/Create" class="list-group-item">Add Product</a></dd>

                </dl>
                <dl>
                    <br>
                    <dt>Manage Gift Categories</dt>
                    <dd><a href="~/GiftProductCategory/Index" class="list-group-item">View Category</a></dd>
                    <dd> <a href="~/GiftProductCategory/Create" class="list-group-item">Add Category</a></dd>
                </dl>

            </div>
        </div>
        <div class="col-md-9">
            <h2>Gift Product Category</h2>


            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <div class="col-md-2">
                            Category Name
                        </div>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.GiftCategoryName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.GiftCategoryName, "", new { @class = "text-danger" })
                        </div>
                    </div>



                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
            <div style="color:red"> @ViewBag.Message </div>


            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
</div>
</div>
</div>